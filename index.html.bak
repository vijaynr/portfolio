    <!-- Contact Section -->
    <section id="contact" class="contact">
      <div class="container">
        <div class="section-header">
          <h2>CONTACT</h2>
          <div class="section-line"></div>
          <p>Send me a message to start our collaboration</p>
        </div>

        <div class="contact-container">
          <form id="contact-form" class="contact-form">
            <div class="form-group">
              <label for="name">NAME</label>
              <input type="text" id="name" name="name" class="pixel-input" placeholder="Enter your name" required />
            </div>
            <div class="form-group">
              <label for="email">EMAIL</label>
              <input type="email" id="email" name="email" class="pixel-input" placeholder="Enter your email" required />
            </div>
            <div class="form-group">
              <label for="message">MESSAGE</label>
              <textarea id="message" name="message" class="pixel-input" placeholder="Type your message here" rows="5"
                required></textarea>
            </div>
            <button type="submit" class="pixel-button">SEND MESSAGE</button>
          </form>

          <div class="contact-info">
            <div class="pixel-card">
              <h3>CONTACT INFO</h3>
              <ul>
                <li>
                  <span class="info-label">EMAIL:</span>
                  <span class="info-value">vj.co.dev@gmail.com</span>
                </li>
                <li>
                  <span class="info-label">LOCATION:</span>
                  <span class="info-value">Bengaluru, Karnataka</span>
                </li>
                <li>
                  <span class="info-label">AVAILABILITY:</span>
                  <span class="info-value">Open for hire</span>
                </li>
              </ul>

              <div class="social-links">
                <a href="https://github.com/vijaynr" class="social-link">GitHub</a>
                <a href="https://www.linkedin.com/in/vijayasankarr" class="social-link">LinkedIn</a>
                <a href="https://x.com/vjaynr" class="social-link">X/Twitter</a>
              </div>
            </div>
          </div>
        </div>
